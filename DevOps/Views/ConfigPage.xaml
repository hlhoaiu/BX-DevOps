<Page x:Class="DevOps.Views.ConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DevOps.Views"
      mc:Ignorable="d" 
      Title="ConfigPage"
      Background="White">

    <StackPanel Name ="XMainPanel" Visibility="Visible">
        <DockPanel Name ="XTopPanel" Height="40" VerticalAlignment="Top">
            <TextBlock Name="XTitle" Text="Configuration" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        </DockPanel>
        <DockPanel Name ="XMiddlePanel" Height="500" VerticalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Name="XFieldGrid"></Grid>
            </ScrollViewer>
        </DockPanel>
        <DockPanel Name ="XBottomPanel" Height="80" VerticalAlignment="Bottom">
            <Grid Name="XBtnGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Name ="XClearBtn" Grid.Column="0" Width="150" Height="40" Content="Clear" FontSize="20" Click="XClearBtn_Click" />
                <Button Name ="XSaveBtn" Grid.Column="1" Width="150" Height="40" Content="Save" FontSize="20" Click="XSaveBtn_Click" />
                <Button Name ="XStartBtn" Grid.Column="2" Width="150" Height="40" Content="Start" FontSize="20" Click="XStartBtn_Click" />
            </Grid>
        </DockPanel>
    </StackPanel>
</Page>
